@import '../../../node_modules/vuetify/src/stylus/bootstrap.styl'
@import '../../../node_modules/vuetify/src/stylus/theme.styl'

c-dis-login($material)

theme(c-dis-login, 'c-dis-login')

.c-dis-login
  background-image: url('../assets/hatching.png')
  background-repeat repeat
  &__title
    color #828282
    align-self stretch
    padding 10px
    transition transform .3s linear
  &__underline
    display flex
    width 100%
    div
      flex auto
      height: 4px
      &:nth-of-type(1)
        background-color #828282
      &:nth-of-type(2)
        background-color #ffffff
      &:nth-of-type(3)
        background-color #cacaca
      &:nth-of-type(4)
        background-color #fff
  @media $display-breakpoints.sm-and-up
    &__title
      display block
      position absolute
      transform-origin 100% 0
      transform translate(-100%, 0) rotateZ(-90deg)
      top 0
      left 20px
      width 80vh
      padding 0
      h1
        padding-left 10px